@{
    ViewBag.Title = "UpdateLesson";
}
@model _14._08.Models.AppLesson
<h2>Студент № @Model.Id</h2>
@using (Html.BeginForm("UpdateLesson", "Home", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Name, "Название предмета")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>        
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}